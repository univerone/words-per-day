{
  "name": "words-per-day",
  "version": "0.0.22",
  "description": "wechaty每日一句插件",
  "main": "dist/src/mod.js",
  "typings": "dist/src/mod.d.ts",
  "scripts": {
    "clean": "shx rm -fr dist/*",
    "dist": "npm run clean && tsc",
    "pack": "npm pack",
    "lint": "npm run lint:es && npm run lint:ts && npm run lint:md",
    "lint:md": "markdownlint README.md",
    "lint:ts": "tsc --noEmit",
    "example": "ts-node examples/ding-dong-bot.ts",
    "start": "npm run example",
    "test": "npm run lint && npm run test:unit",
    "test:pack": "bash -x scripts/npm-pack-testing.sh",
    "test:unit": "blue-tape -r ts-node/register \"src/**/*.spec.ts\" \"src/*.spec.ts\" \"tests/*.spec.ts\" \"tests/**/*.spec.ts\"",
    "lint:es": "eslint --ignore-pattern tests/fixtures/ '{bin,examples,scripts,src,tests}/**/*.ts'"
  },
  "repository": "git+https://github.com/univerone/words-per-day.git",
  "keywords": [],
  "author": "univerone",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/univerone/words-per-day/issues"
  },
  "homepage": "https://github.com/univerone/words-per-day#readme",
  "devDependencies": {
    "@chatie/eslint-config": "^0.12.1",
    "@chatie/git-scripts": "^0.6.2",
    "@chatie/semver": "^0.4.7",
    "@chatie/tsconfig": "^0.10.1",
    "@types/cheerio": "^0.22.21",
    "@types/gm": "^1.18.9",
    "@types/node-schedule": "^1.3.0",
    "@types/puppeteer": "^3.0.2",
    "@types/request": "^2.48.5",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "eslint": "^7.8.0",
    "shx": "^0.3.2",
    "tstest": "^0.4.10",
    "typescript": "^4.0.2",
    "wechaty-puppet": "^0.32.3",
    "wechaty-puppet-hostie": "^0.10.2",
    "wechaty-puppet-mock": "^0.28.1",
    "wechaty-puppet-puppeteer": "^0.22.1"
  },
  "dependencies": {
    "axios": "^0.20.0",
    "cheerio": "^1.0.0-rc.3",
    "git-scripts": "^0.4.3",
    "gm": "^1.23.1",
    "jsonpath-plus": "^6.0.1",
    "memory-card": "^0.10.1",
    "node-schedule": "^1.3.2",
    "puppeteer": "^5.3.1",
    "qrcode-terminal": "^0.12.0",
    "wechaty": "^0.48.8",
    "wechaty-plugin-contrib": "^0.14.15"
  },
  "git": {
    "scripts": {
      "pre-push": "npx git-scripts-pre-push"
    }
  }
}
